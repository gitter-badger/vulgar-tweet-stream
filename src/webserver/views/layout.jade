doctype html
html
  head
    title Dirty Tweet Admin
    link(rel='stylesheet', href='/css/app.css' + cachebust)
    link(href="//maxcdn.bootstrapcdn.com/bootswatch/3.2.0/superhero/bootstrap.min.css", rel="stylesheet")

  body(ng-strict-di)
    block content
    if reload
      script.
        window.CACHEBUST = '#{cachebust}'
      script(src='http://localhost:3000/socket.io/socket.io.js')
      script(src='/js/reload-client.js')

    if optimize
      script(src='/js/main-built.js')
    else
      script(src='/js/lib/requirejs/require.js', data-main='/js/main.js')
